/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 30rpx;
}

.logo {
  width: 144rpx;
  height: 144rpx;
  margin: 40rpx 0;
}

.btn-login {
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  text-align: center;
  border-radius: 10rpx;
}

.wechat {
  background-color: #42BD55;
  color: #fff;
  margin-bottom: 30rpx;
}

.douban {
  background-color: #fff;
  color: #42BD55;
  border: 2rpx solid #42BD55;
}

.agreement{
  color: #9D9D9D;
  font-size: 24rpx;
  display: flex;
  position: absolute;
  bottom: 50rpx;
}

.agreement .open {
  margin-left: 10rpx;
  color: #4BB65C;
}

